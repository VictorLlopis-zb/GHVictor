<Window x:Class="AppWpf1.Vistas.FormPruebaCuadrado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prueba Cuadrado"
        Height="500" Width="700">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Botones -->
            <RowDefinition Height="2*"/>     <!-- DataGrid -->
            <RowDefinition Height="200"/>    <!-- Cuadrado -->
        </Grid.RowDefinitions>

        <!-- Panel superior: botones CRUD -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Crear" Width="100" Margin="5"/>
            <Button Content="Modificar" Width="100" Margin="5"/>
            <Button Content="Eliminar" Width="100" Margin="5"/>
            <Button Content="Aceptar" Width="100" Margin="5"/>
            <Button Content="Salir" Width="150" Margin="5"/>
        </StackPanel>

        <!-- Lista de registros -->
        <DataGrid x:Name="dgvRegistros"
          AutoGenerateColumns="True"
          AutoGeneratingColumn="dgvRegistros_AutoGeneratingColumn"
          Margin="5"/>

        <!-- Panel inferior: cuadrado incrustado -->
        <ContentControl x:Name="contenedorPrueba"
                        Grid.Row="2"
                        BorderBrush="Red"
                        BorderThickness="2"
                        Background="LightGray"/>
    </Grid>
</Window>