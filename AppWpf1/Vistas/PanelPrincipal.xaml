<Window x:Class="AppWpf1.Vistas.PanelPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PanelPrincipal" Height="550" Width="525">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel de selección -->
        <StackPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Grid.Row="0">
            <Button Content="Trabajar con PersonaIdentidad"
                    Click="BtnAbrirFormularioIdentidad_Click"
                    Margin="5" Height="40"/>
            <Button Content="Trabajar con UsuarioAcceso"
                    Click="BtnAbrirFormularioUsuario_Click"
                    Margin="5" Height="40"/>
        </StackPanel>

        <!-- Contenedor dinámico -->
        <ContentControl x:Name="contenedorDinamico" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>